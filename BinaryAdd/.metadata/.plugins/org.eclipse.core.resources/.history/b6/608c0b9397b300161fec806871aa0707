
public class BinaryAdd {
	
	public static String addBinary(String num1, String num2){
		int end1 = (num1.length()-1);
		int end2 = (num2.length()-1);
		int quo = 0;
		int rem = 0;
		StringBuilder sb = new StringBuilder();
		while(end1>=0 && end2 >= 0){
			int num1End = num1.charAt(end1)-'0';
			int num2End = num2.charAt(end2)-'0';
			rem = ((num1End+num2End+quo)%2);
			quo = ((num1End+num2End+quo)/2);
			String rev = ""+rem;
			sb.append(rev);
			--end1;
			--end2;
		}
		
		while(end1 >= 0){
			int num1End = num1.charAt(end1)-'0';
			rem = ((num1End+quo)%2);
			quo = ((num1End+quo)/2);
			String rev = ""+rem;
			sb.append(rev);
			--end1;
		}
		
		while(end2 >= 0){
			int num2End = num2.charAt(end2)-'0';
			rem = ((num2End+quo)%2);
			quo = ((num2End+quo)/2);
			String rev = ""+rem;
			sb.append(rev);
			--end2;
		}
		
		String last = ""+quo;
		sb.append(last);
		String revString = sb;
		return new StringBuilder().reverse(sb);
	}
}
