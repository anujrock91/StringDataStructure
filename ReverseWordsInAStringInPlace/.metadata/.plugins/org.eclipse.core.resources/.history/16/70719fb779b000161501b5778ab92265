
public class Reverse {
	
	public static String getReverseWords(String s1){
		char []s = s1.toCharArray();
		int left = 0;
		int right = (s1.length()-1);
		while(left<=right){
			char temp = s[left];
			s[left] = s[right];
			s[right] = temp;
			++left;
			--right;
		}
		return new String(s);
	}
	
	public static void reverseWord(char [] cArr){
		int left=0;
		int right=0;
		while(left < cArr.length && right<cArr.length){
			while(Character.isAlphabetic(cArr[left])){++left;}
			right = left;
			while(cArr[right] != ' '){right++;}
			--right;
			
		}
	}
}
